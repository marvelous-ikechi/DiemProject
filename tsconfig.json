{
  "extends": "@react-native/typescript-config/tsconfig.json",

  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "baseUrl": "./",
    "paths": {
        "@src/*": ["src/*"],
        "@assets/*": ["src/assets/*"],
        "@components/*": ["src/components/*"],
        "@constants/*": ["src/constants/*"],
        "@hooks/*": ["src/hooks/*"],
        "@navigation/*": ["src/navigation/*"],
        "@screens/*": ["src/screens/*"],
        "@utils/*": ["src/utils/*"],
   }
  }
}
